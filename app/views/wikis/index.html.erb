<h1>Public Wikis</h1>

<br><br>
<div class="row">
  <div class="col-md-8 col-md-offset-1 col-sm-4">
    <% @wikis.each do |wiki| %>
      <div class="media">
        <%= link_to image_tag("#{wiki.file}", class: 'wiki-image'), wiki %>
        <h4 class="wiki-text"><%= "#{wiki.title}" %></h4>
      </div>
    <% end %>
  </div>
  <% if current_user %>
    <div class="col-md-2 col-sm-2">
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
