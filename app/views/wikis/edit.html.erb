<div class="row">
  <div class="col-md-8">
    <br>
    <p><i>Blocipedia supports Markdown, so have fun and make your wiki stand out!</i></p>
    <%= bootstrap_form_for @wiki do |f| %>
      <%= f.text_field :title, autofocus: true %>
      <%= f.text_area :body, rows: "10" %>
      <%= f.check_box :public %>
      <%= f.submit "Submit", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
