<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <p><strong>You have chosen to upgrade your account to premium. Congratulations! Your recurring monthly payment will be:</strong></p>
    <label class="amount">
      <span><%= pretty_amount(@amount) %></span>
    </label>
  </article>

  <script class='stripe-button' src="https://checkout.stripe.com/checkout.js"
          data-key="<%= @stripe_btn_data[:key] %>"
          data-amount="<%= @amount %>"
          data-email="<%= current_user.email %>"
          data-description="<%= @stripe_btn_data[:description] %>"
          data-locale="auto">
  </script>
<% end %>
